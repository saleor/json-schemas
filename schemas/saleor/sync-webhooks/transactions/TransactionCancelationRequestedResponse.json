{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "anyOf": [
    {
      "type": "object",
      "required": ["pspReference"],
      "properties": {
        "pspReference": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": ["result", "amount", "pspReference"],
      "properties": {
        "pspReference": {
          "type": "string",
          "min": 1
        },
        "result": {
          "const": "CANCEL_SUCCESS"
        },
        "amount": {
          "$ref": "schemas/definitions.json#/$defs/PositiveDecimal"
        },
        "time": {
          "$ref": "schemas/definitions.json#/$defs/DateTime"
        },
        "externalUrl": {
          "type": "string",
          "format": "uri"
        },
        "message": {
          "type": "string"
        },
        "actions": {
          "$ref": "schemas/definitions.json#/$defs/TransactionActions"
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": ["result", "pspReference"],
      "properties": {
        "pspReference": {
          "type": "string",
          "min": 1
        },
        "result": {
          "const": "CANCEL_FAILURE"
        },
        "amount": {
          "$ref": "schemas/definitions.json#/$defs/PositiveDecimal"
        },
        "time": {
          "$ref": "schemas/definitions.json#/$defs/DateTime"
        },
        "externalUrl": {
          "type": "string",
          "format": "uri"
        },
        "message": {
          "type": "string"
        },
        "actions": {
          "$ref": "schemas/definitions.json#/$defs/TransactionActions"
        }
      },
      "additionalProperties": false
    }
  ]
}
