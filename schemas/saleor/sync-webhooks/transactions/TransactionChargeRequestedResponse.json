{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "anyOf": [
    {
      "type": "object",
      "required": ["pspReference"],
      "properties": {
        "pspReference": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    {
      "type": "object",
      "required": ["result", "amount", "message", "pspReference"],
      "properties": {
        "amount": {
          "$ref": "schemas/definitions.json#/$defs/PositiveDecimal"
        },
        "externalUrl": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "pspReference": {
          "type": "string"
        },
        "result": {
          "$ref": "#/$defs/TransactionChargeRequestedAllowedResult"
        },
        "time": {
          "$ref": "schemas/definitions.json#/$defs/DateTime"
        }
      },
      "additionalProperties": false
    }
  ],
  "$defs": {
    "TransactionChargeRequestedAllowedResult": {
      "enum": ["CHARGE_SUCCESS", "CHARGE_FAILURE"]
    }
  }
}
